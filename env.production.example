# Production Environment Variables
# ВАЖНО: Скопируйте этот файл как .env и измените значения!

# === БЕЗОПАСНОСТЬ ===
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
DEBUG=false

# === ДОМЕНЫ И ХОСТЫ ===
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# === DATABASE ===
DATABASE_URL=sqlite:///./data/app.db

# === REDIS/CELERY ===
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ===
# Максимальное количество worker'ов Celery
CELERY_WORKER_CONCURRENCY=2

# Уровень логирования
LOG_LEVEL=INFO

# === EMAIL (если настроите отправку email) ===
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=your-email@gmail.com

# === МОНИТОРИНГ ===
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# === РЕЗЕРВНОЕ КОПИРОВАНИЕ ===
# BACKUP_SCHEDULE=0 2 * * *  # Каждый день в 2:00
# BACKUP_RETENTION_DAYS=30 